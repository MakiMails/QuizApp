<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizApp.Pages.EvaluationQuizPage"
             Title="EvaluationQuizPage">
    <VerticalStackLayout>
        <Label Text="Результат"/>
        <Label Text="{Binding CorrectCurrentAnswer}"/>
        <Label Text="/"/>
        <Label Text="{Binding QuestionCount}"/>
        <Label Text="ЗВЕДОЧКИ"/>
        <Button Text="Оценить" Command="{Binding SendEcaluationCommand}"/>
        <Button Text="Главная страница" Command="{Binding BackMainPageCommand}"/>
    </VerticalStackLayout>
</ContentPage>